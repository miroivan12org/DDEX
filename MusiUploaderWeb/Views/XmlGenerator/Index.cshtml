                    <td>
                        <input data-bind="value: approximateReleaseDate" />
                    </td>
                    <td>
                        CLine Release Year:
                    </td>
                    <td>
                        <input data-bind="value: cLineReleaseYear" />
                    </td>
                </tr>
                <tr>
                    <td>
                        MessageID:
                    </td>
                    <td>
                        <input data-bind="value: messageID" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Sender PartyID:
                    </td>
                    <td>
                        <input data-bind="value: senderPartyID" />
                    </td>
                    <td>
                        Sender Party Name:
                    </td>
                    <td>
                        <input data-bind="value: senderPartyName" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Recipient Party ID:
                    </td>
                    <td>
                        <input data-bind="value: recipientPartyID" />
