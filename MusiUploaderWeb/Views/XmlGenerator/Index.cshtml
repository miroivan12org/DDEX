
@{
    ViewBag.Title = "Generate xml File";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/Custom/UploadXmlViewModel.js"></script>
    <script src="~/Scripts/jquery.bootstrap.wizard.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var jsonModel = null;

            ko.applyBindings(new UploadXmlViewModel(
                "@Url.Action("UploadFilePost", "Upload")",
                "dropbox",
                "@Url.Content("~/Content/images/musicNote.png")",
                ["wav", "zip"],
                jsonModel), document.getElementById("fileUploadContainer"));
    });
    </script>
}

<div class="row">
    <div id="fileUploadContainer">
        <br />
        <table class="table table-striped">
            <thead></thead>
            <tbody>
                <tr>
                    <td>
                        EAN:
                    </td>
                    <td>
                        <input data-bind="value: EAN" />
                    </td>
                    <td>
                        Label:
                    </td>
                    <td>
                        <input data-bind="value: label" />
                    </td>
                    <td>
                        PLineText:
                    </td>
                    <td>
                        <input data-bind="value: pLineText" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Title:
                    </td>
                    <td>
                        <input data-bind="value: title" />
                    </td>
                    <td>
                        Genre:
                    </td>
                    <td>
                        <input data-bind="value: genre" />
                    </td>
                    <td>
                        PLine Release Year:
                    </td>
                    <td>
                        <input data-bind="value: pLineReleaseYear" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Update Indicator:
                    </td>
                    <td>
                        <input data-bind="value: updateIndicator" />
                    </td>
                    <td>
                        Sub Genre:
                    </td>
                    <td>
                        <input data-bind="value: subGenre" />
                    </td>
                    <td>
                        CLine Text:
                    </td>
                    <td>
                        <input data-bind="value: cLineText" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Main Artist:
                    </td>
                    <td>
                        <input data-bind="value: mainArtist" />
                    </td>
                    <td>
                        Approximate Release:
