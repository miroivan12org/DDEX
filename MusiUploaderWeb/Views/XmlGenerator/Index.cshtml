                    <td>
                        Recipient Party Name:
                    </td>
                    <td>
                        <input data-bind="value: recipientPartyName" />
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table table-striped" data-bind="visible: showResults">
            <thead>
                <tr>
                    <th></th>
                    <th>File name</th>
                    <th>File size</th>
                    <th>Upload Progress</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: fileList">
